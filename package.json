{
  "name": "landing-page-generator",
  "version": "1.0.0",
  "description": "Gerador de landing pages compostas por texto e imagem",
  "main": "main.js",
  "build": {
    "appId": "com.landing-page-generator-id",
    "productName": "Landing Page Generator",
    "files": [
      "build/**/*",
      "main.js",
      "package.json"
    ],
    "nsis": {
      "include": "build/installer.nsh",
      "allowToChangeInstallationDirectory": true,
      "oneClick": false,
      "perMachine": true,
      "createDesktopShortcut": "always",
      "createStartMenuShortcut": true,
      "shortcutName": "Landing Page Generator",
      "menuCategory": "Landing Page Generator"
    },
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "build"
    }
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Mateus Lopes",
  "license": "ISC",
  "devDependencies": {
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  }
}
